
@{
    ViewBag.Title = "Administration";
}

<h2>Administration</h2>

<div class="row m-5">
    <div class="card mx-auto col-lg-9 shadow">
        <h5 class="m-3">Insurance Quotes</h5>
        <div class="card-body">
            @foreach (var customer in Model)
            {
                <div class="row mb-1 border rounded bg-info text-light">
                    <div class="col-2">
                        @customer.FirstName
                    </div>
                    <div class="col-3">
                        @customer.LastName
                    </div>
                    <div class="col-5">
                        @customer.EmailAddress
                    </div>
                    <div class="col-2 text-right">
                        @String.Format("{0:c}", customer.Rate)
                    </div>
                </div>
            }
        </div>
    </div>
</div>